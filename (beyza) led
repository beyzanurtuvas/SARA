#include "Servo_Ext_ALC.h"

Servo_Ext Ext_Servo_Kontrol;

void setup() {
  Serial.begin(57600);

  Ext_Servo_Kontrol.begin();           // Harici servo kontrolcüyü başlat
  Ext_Servo_Kontrol.Ext_Servo_Fr(60);  // Frekansı 60Hz olarak ayarla (standart servo frekansı)

  // LED'i yak – 0. kanala 1900us sinyal gönder → Tam parlaklık
  Ext_Servo_Kontrol.Ext_Servo(0, 1900); // 0: servo numarası (LED takılı), 1900: tam parlaklık
}

void loop() {
  // PWM sabit olduğu için sürekli tekrar etmeye gerek yok.
}
